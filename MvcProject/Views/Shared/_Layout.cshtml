<!DOCTYPE html>
<html>
<head>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.icon').click(function () {
                $('.search').toggleClass('active');
            });
        });
    </script>
    <script type="text/javascript">
        function changeLang(lang) {
            $.ajax({
                method: "POST",
                url: "MvcProject/Home/ChangeLanguage",
                data: { lang: lang },
                cache: false
            })
                .done(function (html) {
                    window.location = window.location.pathname;
                    if (lang == 'ka') {
                        $('#langEng').removeClass('selected');
                        $('#langGeo').addClass('selected');
                    }
                    else if (lang == 'en') {
                        $('#langGeo').removeClass('selected');
                        $('#langEng').addClass('selected');
                    }
                });
        }
    </script>
</head>
<body>
    <link href="~/Content/Mystyle.css" rel="stylesheet" type="text/css" />

    @if (@ViewData["Lang"].ToString() == "ka-GE")
    {
        <div id="langEng" style="width: 30px; float: right; margin-top: -5px; height: 31px; text-align: center; line-height: 30px;" class="navbar_lang">
            <a href="#" onclick="changeLang('en')"> <img src="~/Content/Images/GBP.jpg" /> </a>
        </div>
        <div id="langGeo" style="width: 30px; float: right; margin-left: 7%; margin-top: -5px; height: 31px; text-align: center; line-height: 30px;" class="navbar_lang selected">
            <a href="#" onclick="changeLang('ka')"><img src="~/Content/Images/ge.png" /></a>
        </div>

    }
    else
    {
        <div id="langEng" style="width: 30px; float: right; margin-left: 2%; margin-top: -5px; height: 31px; text-align: center; line-height: 30px;" class="navbar_lang selected">
            <a href="#" onclick="changeLang('en')"> <img src="~/Content/Images/GBP.jpg" /> </a>
        </div>
        <div id="langGeo" style="width: 30px; float: right; margin-left: 7%; margin-top: -5px; height: 31px; text-align: center; line-height: 30px;" class="navbar_lang">
            <a href="#" onclick="changeLang('ka')"><img src="~/Content/Images/ge.png" /></a>
        </div>

    }
    <nav class="navbar navbar-expand-lg navbar-light ">
        <a class="navbar-brand" href="#"><img src="~/Content/Images/NavbarLogo.png" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-md-center" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item dropdown mr-5">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                       @MvcProject.Resources.Res.navMenuItem1
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
                <li class="nav-item dropdown mr-5">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @MvcProject.Resources.Res.navMenuItem2
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
                <li class="nav-item dropdown mr-5">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @MvcProject.Resources.Res.navMenuItem3
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
                <li class="nav-item dropdown mr-5">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @MvcProject.Resources.Res.navMenuItem4
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
