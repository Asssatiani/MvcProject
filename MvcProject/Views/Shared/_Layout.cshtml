                    </div>
                </li>
                <li class="nav-item">
                    <form class="form-inline my-2 my-lg-0">
                        <input type="search" placeholder=@MvcProject.Resources.Res.txtSearch>
                    </form>
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
